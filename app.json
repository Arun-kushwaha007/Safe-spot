{
  "expo": {
    "name": "Bathroom Now",
    "slug": "bathroom-now",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "bathroom-now",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#007AFF"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#007AFF"
      },
      "package": "com.bathroomnow.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.bathroomnow.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "We need your location to show nearby bathrooms.",
        "NSLocationAlwaysUsageDescription": "We need your location to show nearby bathrooms even in background."
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Bathroom Now to use your location to find nearby restrooms."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
